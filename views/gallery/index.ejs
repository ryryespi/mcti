<% include ../partials/header %>

    <body>
        <div class="container">
            <header class="jumbotron">
                <div class="container">
                    <h1> Welcome to the MCTI Gallery </h1>
                    <p> View our pictures </p>
                    <p>
                        <a class="btn btn-primary btn-large" href="/gallery/new"> Add New Image </a>
                    </p>
                </div>
            </header>

            <div class="row">
                <div class="col-lg-12">
                    <h3>Our best memories</h3>
                </div>
            </div>

            <div class="row">
                <%  images.forEach(function(image){  %>
                    <div class="m-1 card " style="width:20rem;">

                        <div class="card-header">
                            <h5 class="card-title">
                                <%= image.name.charAt(0).toUpperCase() + image.name.slice(1)%>
                            </h5>
                        </div>
                        <img class="card-img-top" src="<%= image.image %>">
                        <div class="h-100 card-footer">

                            <p><a href="/gallery/<%= image._id %>" class=" btn btn-primary">More Info</a></p>
                        </div>



                    </div>
                    <% });%>
            </div>
        </div>
    </body>
    <% include ../partials/footer %>